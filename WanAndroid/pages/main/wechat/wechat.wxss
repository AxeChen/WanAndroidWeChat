/* pages/main/wechat/wechat.wxss */

.wechat_container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.wechat_nav {
  z-index: 1;
  position: fixed;
  top: 0;
  left: 0;
  background: white;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.wechat_tab_layout {
  display: flex;
  flex-direction: row;
}

.wechat_nav {
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #e6e6e6;
}

.wechat_item_container {
  display: flex;
  flex-direction: row;
}

.wechat_all {
  width: 70rpx;
  align-self: center;
  height: 70rpx;
  border-left: 2rpx solid #e6e6e6;
  background: white;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.wechat_all_text{
  font-size: 20rpx;
    margin-left: 15rpx;
    color: #00bfff;
}

.wechat_all_image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 15rpx;
}

.wechat_item {
  height: 50rpx;
  margin: 20rpx;
  white-space: nowrap;
}

.wechat_item_selected {
  height: 50rpx;
  margin: 20rpx;
  white-space: nowrap;
  border-bottom: 4rpx solid #00bfff;
}

.article_lists {
  padding: 20rpx 20rpx 20rpx 20rpx;
  flex-direction: column;
  border-top: 1px solid #f7f7f7;
  background: white;
}

.article_lists:active {
  background: #f7f7f7;
}

.article_lists_user_info {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}

.article_avatar_img {
  height: 50rpx;
  width: 50rpx;
}

.article_lists_head {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.article_author {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #9e9e9e;
}

.article_title_contain {
  margin-top: 10rpx;
}

.article_title {
  font-size: 34rpx;
  margin-top: 20rpx;
  color: #111;
}

.article_bottom {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  width: 100%;
}

.article_tags_container {
  display: flex;
  flex: 1;
}

.article_tags {
  flex: 1;
  font-size: 24rpx;
  color: #9e9e9e;
}

.article_time {
  align-items: right;
  font-size: 24rpx;
  color: #9e9e9e;
}

.article_type {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
}

.article_type_news {
  border: 1rpx solid red;
  padding: 4rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: red;
}

.article_project {
  margin-left: 14rpx;
  border: 1rpx solid green;
  padding: 4rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: green;
}

.article_top {
  margin-left: 14rpx;
  border: 1rpx solid green;
  padding: 4rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: green;
}

.article_list {
  margin-top: 100rpx;
}

.load_next{
  height: 100rpx;
  display: flex;
  justify-content: center;
}

.load_text{
  align-self: center;
}