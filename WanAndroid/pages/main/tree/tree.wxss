/* pages/main/tree/tree.wxss */

.tree_container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.tree_head {
  height: 90rpx;
  align-items: center;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.tree_item {
  border-bottom: 1px solid #e6e6e6;
}

.tree_kinds {
  font-size: 24rpx;
  color: #e6e6e6;
}

.tree_children {
  display: none;
  flex-wrap: wrap;
  width: 100%;

  margin-bottom: 20rpx;
}

.tree_title {
  line-height: 60rpx;
  align-items: center;
  margin-left: 20rpx;
  width: 100%;
  flex: 1;
  color: #00BFFF;
}

.item {
  padding: 20rpx 20rpx 20rpx 20rpx;

  flex: 1;
}

.tree_arrow {
  width: 60rpx;
  height: 50rpx;
}
