/* pages/main/article/article.wxss */

.article_container {
  display: flex;
  flex-direction: column;
}

.artilce_swiper {
  width: 100%;
  height: 320rpx;
}

.artilce_swiper_image {
  width: 100%;
}

.search_icon {
  width: 43rpx;
  height: 40rpx;
}



.search_input {
  font-size: 28rpx;
  margin-left: 20rpx;
  width: 100%
}

.search_clear {
  height: 40rpx;
  margin-right: 40rpx;
  width: 42rpx;
  align-self: right;
}

.article_lists {
  padding: 20rpx 20rpx 20rpx 20rpx;
  flex-direction: column;
  border-top: 1px solid #f7f7f7;
  background: white
}
.article_lists:active{
  background:#f7f7f7;
}

.article_lists_user_info {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}

.article_avatar_img {
  height: 50rpx;
  width: 50rpx;
}

.article_lists_head {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.article_author {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #9e9e9e;
}

.article_title_contain{
  margin-top: 10rpx;
}

.article_title {
  font-size: 34rpx;
  margin-top: 20rpx;
  color: #111;
}

.article_bottom {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  width: 100%;
}
.article_tags_container{
  display: flex;
  flex: 1;
}
.article_tags {
  flex: 1;
  font-size: 24rpx;
  color: #9e9e9e;
}

.article_time {
  align-items: right;
  font-size: 24rpx;
  color: #9e9e9e;
}

.article_type {
  display: flex;
  flex-direction: row;
  align-items: center;
    font-size: 24rpx;
}

.article_type_news {
  border: 1rpx solid red;
  padding: 4rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: red;
}

.article_project {
  margin-left: 14rpx;
  border: 1rpx solid green;
  padding: 4rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: green;
}

.article_top {
  margin-left: 14rpx;
  border: 1rpx solid green;
  padding: 4rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: green;
}

.scroll_view{
  padding-top: 90dp;
}

.article_search {
  display: flex;
  padding-left: 20rpx;
  padding-right: 40rpx;
  flex-direction: row;
  align-items: center;
  height: 90rpx;
  position: fixed;
  width: 100%;
  background:white;
  z-index: 1;
}