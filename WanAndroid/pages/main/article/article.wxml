<!--pages/main/article/article.wxml-->
<view class="article_container">

  <view class="article_search">
    <image src="../../../images/ic_search.png" class="search_icon"></image>
    <input class="search_input" placeholder="搜索文章" />
    <image class="search_clear" src="../../../images/ic_search_clear.png" />
  </view>

  <swiper indicator-dots="true" autoplay="true" interval="5000" class="artilce_swiper">
    <block wx:for="{{artcileBanner}}" wx:key="key">
      <swiper-item>
        <image class="artilce_swiper_image" src="{{item.imagePath}}" />
      </swiper-item>
    </block>
  </swiper>

  <block wx:for="{{artcies}}" wx:key="articleItem">
    <view class="article_lists" bindtap="itemClick" data-s="{{item}}">

      <view class="article_lists_head">
        <view class="article_lists_user_info">
          <image class="article_avatar_img" src="../../../images/ic_default_avatar.png"></image>
          <text class="article_author">{{item.author}}</text>
        </view>
        <view class="article_type">
          <text class="article_type_news">最新</text>
          <text class="article_project">项目</text>
          <text class="article_top">置顶</text>
        </view>
      </view>

      <view class="article_title_contain">
        <text class="article_title">{{item.title}}</text>
      </view>


      <view class="article_bottom">
        <view class="article_tags_container">
                <text class="article_tags">分类：{{item.chapterName}}/{{item.superChapterName}}</text>
        </view>


        <text class="article_time">时间：{{item.niceDate}}</text>
      </view>

    </view>

  </block>


</view>